            <a href="contact.html" class="nav-item nav-link">Contact</a>
          </div>

        </div>
      </nav>
    </div>
    <!-- Navbar & Hero End -->


    <!-- Menu Start -->
    <div class="container-xxl py-5">
      <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
          <h5 class="section-title ff-secondary text-center text-primary fw-normal">Food Menu</h5>
          <h1 class="mb-5">Most Popular Items</h1>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
          <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
              <div class="row g-4">

                <% for (let dish of restaurant) { %>
                  <div class="col-lg-6 mt-4">
                    <div class="d-flex align-items-center">
                      <img class="img-fluid rounded" src="<%= dish.url %>" alt=""
                        style="max-width: 80px; background-position: center center; background-size: cover;">
                      <div class="w-100 d-flex flex-column pl-4">

                        <div class="d-flex border-bottom pb-2 justify-content-between">
                          <div class="d-flex justify-content-center align-items-center">
                            <h5>
                              <%= dish.dish_name %>
                            </h5>
                            <h5 class="text-primary pl-2">$<%= dish.price %>
                            </h5>
                          </div>

                          <form class="form d-flex justify-content-center align-items-center">
                            <input data-id="<%= dish.id %>" data-name="<%= dish.dish_name %>" data-price="<%= dish.price %>" type="number" name="quantity" style="width: 50px"
                              placeholder="0" min="0" oninput='this.value = !!this.value && Math.abs(this.value) >= 0 ? Math.abs(this.value) : null' value="0"/>
                            <button type="submit" class="btn btn-outline-success ml-2" data-mdb-ripple-color="dark"
                              style="height: 37px; width:37px;" data-id="<%= dish.id %>">
                              <i class="fa-solid fa-plus"></i>
                            </button>
                          </form>
                        </div>
                        <div class="d-flex">
                          <small class="text-start">
                            <%= dish.description %>
                          </small>
                        </div>
                      </div>

                    </div>
                  </div>
                  <% } %>


              </div>
            </div>
          </div>
        </div>

        <div class='d-flex justify-content-center w-100 mt-5' style="position: relative;">
          <div id="cart-badge" class="p-2 bg-danger border border-light rounded-circle" style="height: 3px; width: 3px; position: relative; top: -7px; left: 140px; display: none;">
          </div>
          <button id="cart-btn" type="button" class="btn btn-primary " data-toggle="modal" data-target="#exampleModalCenter">
            Show Carts
          </button>

        </div>
      </div>
    </div>
    <!-- Menu End -->


    <!-- Footer Start -->
    <!-- REFACTOR FOOTER ----------------------------------------------------------- -->
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
      <div class="container py-5">
        <div class="row g-5">
          <div class="col-lg-3 col-md-6">
            <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Company</h4>
            <a class="btn btn-link" href="">About Us</a>
